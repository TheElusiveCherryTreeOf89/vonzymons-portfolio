import { Link } from "react-router-dom";
import React, { useEffect, useState } from "react";
import { toggleVhs } from "../lib/theme";
import { Dialog, DialogContent, DialogClose } from '../components/ui/dialog.jsx';

// Stats for the retro score layout (labels left, numbers right)
const SKILLS_STATS = [
  { name: "KILLS", value: "20,200" },
  { name: "COMBO", value: "56,000" },
  { name: "FLEXIBILITY", value: "8,000" },
  { name: "MOBILITY", value: "3,210" },
  { name: "BOLDNESS", value: "2,840" },
  { name: "TIME BONUS", value: "16,720" },
  { name: "SPECIAL", value: "8,000" }
];

export default function Home() {
  const [isProfileOpen, setIsProfileOpen] = useState(false);

  // Toggle VHS with keyboard 'v'
  useEffect(() => {
    const onKey = (e) => {
      if (e.key && e.key.toLowerCase() === 'v') toggleVhs();
    };
    window.addEventListener('keydown', onKey);
    return () => window.removeEventListener('keydown', onKey);
  }, []);

  return (
    <section className="min-h-screen relative overflow-hidden bg-black text-white">
      {/* Global overlays (CRT + VHS) - kept for visual effects */}
      <div className="crt-vignette pointer-events-none" aria-hidden />
      <div className="vhs-overlay pointer-events-none" aria-hidden />

      <div className="max-w-7xl mx-auto px-6 py-12 relative z-10">
        <div className="grid grid-cols-12 gap-6 items-start">
          {/* Left: large stacked labels (7/12) */}
          <div className="col-span-7">
            <div className="space-y-4">
              {SKILLS_STATS.map((s, i) => (
                <div key={s.name} className="flex items-center">
                  <div className="w-3/5">
                    <h3 className="text-5xl md:text-6xl font-pixel neon-text text-neon-pink chromatic-edge">{s.name}</h3>
                  </div>
                  <div className="w-2/5 text-right">
                    <div className="text-3xl md:text-4xl font-justice text-neon-pink neon-pulse score-animate">{s.value}</div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          {/* Right: empty space for contrast + small blocks (5/12) */}
          <div className="col-span-5 flex flex-col items-end">
            <div className="text-right">
              <div className="text-6xl md:text-7xl font-justice neon-text text-cyan-400 chromatic">GRADE
                <span className="ml-6 text-7xl text-cherry-red grade-flash">S</span>
              </div>

              <div className="mt-6 text-4xl md:text-5xl font-justice neon-text text-neon-pink">LEVEL SCORE: <span className="text-neon-pink">115070</span><span className="text-white/80">/42000</span></div>
              <div className="mt-2 text-sm font-vt323 text-gray-400">TOTAL TIME: 05:08.866</div>
            </div>

            <div className="mt-12">
              <div className="flex items-center gap-6">
                <button onClick={() => setIsProfileOpen(true)} className="flex flex-col items-center group">
                  <div className="w-44 h-44 profile-image-container static-noise rounded-md overflow-hidden">
                    <img src="/images/profile-pixel.png" alt="Profile" className="w-full h-full object-cover pixelated" />
                  </div>
                  <div className="mt-3 font-pixel text-sm text-white neon-text">AUTHOR PROFILE</div>
                  <div className="text-cherry-red text-xs">[CLICK ME!]</div>
                </button>

                <Link to="/contact" className="self-end font-pixel border border-neon-blue px-4 py-2 text-neon-blue hover:bg-neon-blue/10">CONTACT ME</Link>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Profile modal */}
      <Dialog open={isProfileOpen} onOpenChange={setIsProfileOpen}>
        <DialogContent className="max-w-3xl">
          <div className="flex flex-col md:flex-row gap-6">
            <div className="w-44 h-44 profile-image-container">
              <img src="/images/profile-pixel.png" alt="Profile" className="w-full h-full object-cover pixelated" />
            </div>
            <div>
              <h2 className="text-2xl font-pixel text-cherry-red neon-text">Developer Profile</h2>
              <p className="mt-4 font-vt323 text-gray-300">Full-stack developer focused on immersive, neon-soaked UI and modern web stacks. Skilled with React, Tailwind, Python, and databases.</p>

              <ul className="mt-4 space-y-2 font-vt323 text-sm">
                <li><strong className="text-neon-pink">Skills:</strong> React, TypeScript, Node.js, Python, SQL, Tailwind</li>
                <li><strong className="text-neon-pink">Experience:</strong> Projects, freelance and coursework (add details)</li>
                <li><strong className="text-neon-pink">Education:</strong> BS in Computer Science (add details)</li>
              </ul>
            </div>
          </div>

          <div className="mt-6 text-right">
            <DialogClose asChild>
              <button className="px-4 py-2 bg-cherry-red text-white font-pixel">CLOSE</button>
            </DialogClose>
          </div>
        </DialogContent>
      </Dialog>
    </section>
  );
}
